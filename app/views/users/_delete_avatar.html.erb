<div class="modal-dialog">
	<div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h6 id="modal-formLabel"><%= t(:confirm_delete) %></h6>
    </div>
    <div class="modal-body">
      <p><%= t(:delete_avatar_dialog, scope: "simple_form.labels.user") %></p>
    </div>
    <div class="modal-footer">
      <button class="btn btn-default" data-dismiss="modal"><%= t(:cancel_button, scope: "buttons") %></button>
      <%= link_to t(:delete, scope: "buttons"), destroy_avatar_user_path(id: @user.id), remote: true, class: "btn btn-danger" %>
      </div>
  </div>
</div>